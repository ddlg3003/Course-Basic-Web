<div class="mt-4">
    <h3 class="margin-header">Sửa khoá học</h3>
    <form method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên</label>
            <input class="form-control" value="{{course.name}}" name="name">
        </div>
            <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" name="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="image">Ảnh</label>
            <input class="form-control" value="{{course.image}}" name="image">
        </div> 
        <div class="form-group">
            <label for="videoId">Video ID</label>
            <input class="form-control" value="{{course.videoId }}" name="videoId">
        </div>                     
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>
