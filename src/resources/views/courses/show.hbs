<div class="mt-4">
    <div class="row margin-header">
        <div class="col-lg-3">
            <form action="/courses/{{course.name}}/add?_method=PUT" method="POST">
                <button type="submit" class="btn btn-primary">Đăng ký học</button>
            </form>
        </div>
        <div class="col-lg-9">
            <h2>{{course.name}}</h2>
            <iframe class="responsive-iframe" src="https://www.youtube.com/embed/{{course.videoId}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <p>{{course.description}}</p>
        </div>
    </div>
</div>